{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2022", "dom.iterable", "ESNext"],
    "sourceMap": true,
    "outDir": "out",
    "strict": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/graphql/sidecar.graphql",
        "tadaOutputLocation": "./src/graphql/sidecarGraphQL.d.ts"
      }
    ],
    "paths": {
      "vscode-test-playwright": ["./node_modules/vscode-test-playwright/dist/index.d.ts"]
    }
  },
  "exclude": ["openapi-ts.config.ts"]
}
